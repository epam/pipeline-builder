{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "dom"],
    "sourceMap": false,
    "declaration": true,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "outDir": "dist/@types"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "scripts",
    "gen"
  ]
}
